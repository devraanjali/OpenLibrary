    <style>
      body {
    background-image:url('https://images.pexels.com/photos/1178683/pexels-photo-1178683.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');
    background-color:rgb(65, 206, 211);
    background-repeat: no-repeat;
  background-size: 100% 100%;
  }
  body {font-family: "Lato", sans-serif}
.mySlides {display: none}
  
  #dashboard{
      font-style: italic;
      font-size:200%;
      color:aquamarine
  }
  
  #landing-header {
    z-index: 1;
    
    text-align: center;
    padding-top: 40vh;
  }
  
  #landing-header h1{
    color:white;
    font-size:500%;
  }
   
  
  th ,td{
    padding:0px;
  }
  @media (min-width: 1000px){
  .jumbotron{
    background-color:bisque;
  width:49%;
  border-spacing: 0px 5px;
  border-collapse: collapse;
  margin-left:5px;
  margin-right:5px;
    
  }
  }

  
    </style>
    <body>

  <% include ./partials/navybar %>
  <div>

        <div id="landing-header" class=" ">
        <h1>Welcome to OpenLib</h1>
       <h4 style="color:blue"> <% include ./partials/messages %></h4>
        <br>
        
        

        <a href="/books/add/<%= user.email %>" class="btn btn-success btn-lg">Add New Book</a>
        <a href="/books/recent" class="btn btn-success btn-lg">recently added books</a>
        <p>
            <form action="/dashboard/" method="GET" class="form-inline">
                <div class="form-group">

                    <input type="text" name="search" placeholder="Book search..." class="form-control">
                    
                    <input type="submit" value="Search" class="btn btn default">
                </div>
            </form>
        </p>
        <p><h2 style="color:red"><%= noMatch %></h2></p>
        
        </div>
        <% books.forEach(function(book){ %>
            <div class="container col-sm-12 col-lg-6 jumbotron text-center border" id="jumbotron">
              <div>
                <table style="width:95%">
                  <tr>
                    <th>Name</th>
                    <td><%= book.name%></td>
                  </tr>
                  <tr>
                    <th>Author</th>
                    <td><%= book.author%></td>
                  </tr>
                  <tr>
                      <th>Owner</th>
                      <td> <%= book.owner%></td>
                  </tr>
                  <tr>
                      <th></th>
                      <td></td>
                  </tr>
                </table>
                </div>
                <div>
                  <p>
                    <a href="/details/<%= book.id %>" class="btn btn-primary">More Info</a>
                  </p>
                </div>
                <div>
                  <p>
                    <a href="/mailing/request/<%= book.id %>" class="btn btn-primary">Request</a>
                  </p>
                </div>
            </div>
       <% });%>
          </div>
       <script>
        // Automatic Slideshow - change image every 4 seconds
        var myIndex = 0;
        carousel();
        
        
        function myFunction() {
          var x = document.getElementById("navDemo");
          if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
          } else { 
            x.className = x.className.replace(" w3-show", "");
          }
        }
            </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        
    </body>

</html>