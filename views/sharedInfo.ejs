<html>
    <head>
        <title>details</title>

    <style>
          body {
    background-image:url();
    background-color:black;
  }
  
  #dashboard{
      font-style: italic;
      font-size:200%;
      color:aquamarine
  }
  
  #landing-header {
    z-index: 1;
    position: relative;
    text-align: center;
    padding-top: 40vh;
  }
  
  #landing-header h1{
    color:white;
    font-size:500%;
  }
   
  
  th ,td{
    padding:0px;
  }
  @media (min-width: 1000px){
  .jumbotron{
    background-color:bisque;
  width:49%;
  border-spacing: 0px 5px;
  border-collapse: collapse;
  margin-left:5px;
  margin-right:5px;
    
  }
  }
  
  @media (max-width: 1000px){
  .jumbotron{
    background-color:bisque;
  width:95%;
  border-spacing: 0px 5px;
  border-collapse: collapse;
  margin-left:5px;
  margin-right:5px;
    
  }
  }
    </style>

    </head>
    <body>

            <div class="container col-sm-12 col-lg-6 jumbotron text-center border" id="jumbotron">
              <div>
                <table style="width:45%">
                  <tr>
                    <th>Name</th>
                    <td><%= fld.books.name%></td>
                  </tr>
                  <tr>
                    <th>Author</th>
                    <td><%= fld.books.author%></td>
                  </tr>
                  <tr>
                      <th>Method</th>
                      <td> <%= fld.books.lend%></td>
                  </tr>
                   <tr>
                      <th>Edition</th>
                      <td> <%= fld.books.edition%></td>
                  </tr> <tr>
                      <th>Genre</th>
                      <td> <%= fld.books.genre%></td>
                  </tr> <tr>
                      <th>Subject</th>
                      <td> <%= fld.books.subject%></td>
                  </tr>
                   <tr>
                      <th>Description</th>
                      <td> <%= fld.books.description%></td>
                  </tr>
                  <tr>
                      <th></th>
                      <td></td>
                  </tr>
                </table>
                </div>
                
            </div>
            <br><br>
            <div class="container col-sm-12 col-lg-6 jumbotron text-center border" id="jumbotron">
            <table>
              <tr>
                <th>person</th>
                <th>from</th>
                <th>to</th>
              </tr>
              <% for(var i=0; i<fld.Persons_Taken.length ;i++){ %>
                <tr>
                    <td><%= fld.Persons_Taken[i]%></td>
                    <td><%= fld.date_Array[i]%></td>
                    <td><%= fld.date_Array[i+1]%></td>
                </tr>
               <% } %>
            </table>
            </div>
            
              


       <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>








    </body>
</html>