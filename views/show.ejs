<html>
    <head>
        <title>details</title>

    <style>
          body {
    background-image:url();
    background-color:black;
  }
  
  #dashboard{
      font-style: italic;
      font-size:200%;
      color:aquamarine
  }
  
  #landing-header {
    z-index: 1;
    position: relative;
    text-align: center;
    padding-top: 40vh;
  }
  
  #landing-header h1{
    color:white;
    font-size:500%;
  }
   
  
  th ,td{
    padding:0px;
  }
  @media (min-width: 1000px){
  .jumbotron{
    background-color:bisque;
  width:49%;
  border-spacing: 0px 5px;
  border-collapse: collapse;
  margin-left:5px;
  margin-right:5px;
    
  }
  }
  
  @media (max-width: 1000px){
  .jumbotron{
    background-color:bisque;
  width:95%;
  border-spacing: 0px 5px;
  border-collapse: collapse;
  margin-left:5px;
  margin-right:5px;
    
  }
  }
    </style>

    </head>
    <body>
            <br><br><br><br><br><br><br><br>
            <div class="container col-sm-12 col-lg-6 jumbotron text-center border" id="jumbotron">
              <div>
                <table style="width:45%">
                  <tr>
                    <th>Name</th>
                    <td><%= Book.name%></td>
                  </tr>
                  <tr>
                    <th>Author</th>
                    <td><%= Book.author%></td>
                  </tr>
                  <tr>
                      <th>Method</th>
                      <td> <%= Book.lend%></td>
                  </tr>
                   <tr>
                      <th>Edition</th>
                      <td> <%= Book.edition%></td>
                  </tr> <tr>
                      <th>Genre</th>
                      <td> <%= Book.genre%></td>
                  </tr> <tr>
                      <th>Subject</th>
                      <td> <%= Book.subject%></td>
                  </tr>
                   <tr>
                      <th>Description</th>
                      <td> <%= Book.description%></td>
                  </tr>
                  <tr>
                    <th>Original Owner's Email</th>
                    <td> <%= Book.OriginalEmail%></td>
                </tr><tr>
                  <th>Current Owner's Email</th>
                  <td> <%= Book.CurrentEmail%></td>
              </tr>
                  <tr>
                      <th></th>
                      <td></td>
                  </tr>
                </table>
                </div>
                <div>
                  <p>
                    <a href="/mailing/request/<%= Book._id %>" class="btn btn-primary">Request</a>
                  </p>
                </div>
                <div>
                <p>
                  <a href="/dashboard" class="btn btn-primary">Cancel</a>
                </p>
              </div>                
            </div>
            
      


       <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>








    </body>
</html>